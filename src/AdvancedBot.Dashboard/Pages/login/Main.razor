  <div class="main-title-container">
    <MatH1><span class="orange-text">GLR</span><span class="blue-text">-DB</span></MatH1>
  </div>
  <div class="main-subtitle-container">
    <MatH6>Galaxy Life Reborn Discord Bot</MatH6>
  </div>
</div>
<div class="login-button-container">
  <!-- This button shall redirect to the Discord Login page. Then to the Server Picker page. -->
  <MatButtonLink Href="/server-picker" Unelevated="true" Icon="login">Login with Discord</MatButtonLink>
</div>